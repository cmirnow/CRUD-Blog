<!-- Main Content -->
<div class="container">
  <div class="clearfix">
    <%= button_one %>
  </div>
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% @object.each do |i| %>
      <%= preview_category(i) %>
        <div class="post-preview">
          <%= category_title_link(i) %>
            <p class="post-meta">
              <%= i.description %>
            </p>
        </div>
        <hr>
      <% end %>
      <div class="clearfix">
        <%= pagination %>
      </div>
    </div>
  </div>
</div>
<hr>