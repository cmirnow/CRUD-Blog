<link rel="stylesheet" href="/css/contact_form/mdb.css">
<div class="container">
    <!--Section: Contact v.2-->
    <section class="section">
        <!--Section heading-->
        <h2 class="section-heading h1 pt-4">Contact us</h2>
        <!--Section description-->
        <p class="section-description">Если черкнуть письмецо - уйдет администратору на email, дополнительно сохранится в базе данных сайта.<br>Читать можно как в почте, так и в панели Active Admin.</p>
        <%= form_with(model: contact, local: true) do |form| %>
        <% if contact.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
            <ul>
                <% contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
            <div class="row">
                <!--Grid column-->
                <div class="col-md-8 col-xl-9">
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form">
                                <div class="md-form">
                                    <%= form.text_field :name, placeholder: "Your Name", class: 'form-control', required: true %>
                                        <%= label(:name, :name) %>
                                </div>
                            </div>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form">
                                <div class="md-form">
                                    <%= form.text_field :email, placeholder: "Email Address", class: 'form-control', required: true %>
                                        <%= label(:email, :email) %>
                                </div>
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form">
                                <%= form.text_field :subject, placeholder: "Message Subject", class: 'form-control', required: true %>
                                    <%= label(:subject, :subject) %>
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-12">
                            <div class="md-form">
                                <%= form.text_area :message, placeholder: "Your Message", class: 'md-textarea', required: true %>
                                    <%= label(:message, :message) %>
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    </form>
                    <%= recaptcha_tags %>
                        <div class="center-on-small-only">
                            <%= form.submit :Send, class: 'btn' %>
                        </div>
        <% end %>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-4 col-xl-3">
                    <ul class="contact-icons">
                        <li><i class="fa fa-map-marker fa-2x"></i>
                            <p>Free World</p>
                        </li>
                        <li><i class="fa fa-phone fa-2x"></i>
                            <p>+ 01 234 567 89</p>
                        </li>
                        <li><i class="fa fa-envelope fa-2x"></i>
                            <p>info@masterpro.ws</p>
                        </li>
                    </ul>
                </div>
                <!--Grid column-->
            </div>
    </section>
    <!--Section: Contact v.2-->
</div>
<script type="text/javascript" src="/js/contact_form/mdb.js"></script>
