<% if defined?(@check) %>
	<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
		<div class="container">
			<%= link_to "Start Page", root_path, :class => "navbar-brand", :data => {turbolinks: 'false'} %>
				<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"> Menu <i class="fas fa-bars"></i>
				</button>
				<div class="collapse navbar-collapse" id="navbarResponsive">
					<ul class="navbar-nav ml-auto">
						<% @articles.each do |i| %>
							<li class="nav-item">
							<%= link_to i.title, { :controller => "posts", :action => "show", :id => i.slug }, :class => "nav-link" %>
							</li>
						<% end %>
							<li class="nav-item">
							<%= link_to "Contacts", { :controller => "contacts" }, :class => "nav-link" %>
							</li>
					</ul>
				</div>
		</div>
	</nav>
<% end %>