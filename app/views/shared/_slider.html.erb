<style>
/* Bootstrap 4 carousel dark overlay */
.carousel-item:after {
  content:"";
  display:block;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background:rgba(0,0,0,<%= slider_dark %>);
}
</style>

<div id="carouselFade" class="carousel slide <%= carousel_fade? %>" data-ride="carousel" data-interval="<%= slider_interval %>">
	<div class="carousel-inner">
			<% @slider.images.each_with_index do |img, index| %>
				<div class="carousel-item<%= ' active' if index == 0 %>">
					<%= image_tag(img, class:"d-block w-100") %>
				</div>
			<% end %>
	</div>
	<a class="carousel-control-prev" href="#carouselFade" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a>
	<a class="carousel-control-next" href="#carouselFade" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
</div>

<script src="/js/spinner.js"></script>